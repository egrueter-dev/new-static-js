---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <h3><%= link_to article.title, article %>&nbsp;<span class="small muted"><%= article.date.strftime('%B %e, %Y') %></span></h3>
  <p class="lead"><%= article.metadata[:page]["excerpt"] %></p>
  <hr>
<% end %>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
